<%= simple_form_for(@ride) do |f| %>
  <div class="row margin-form">
    <div class="col-xs-6">
      <%= f.input :date, as: :string, input_html: { class: "datepicker" }, placeholder: "Date du trajet", label: "Date :" %>
    </div>
    <div class="col-xs-6">
      <%= f.input :reason, placeholder:"Client, Prospect, Partenaire", label: "Motif :" %>
    </div>
  </div>
  <div class="row margin-form">
    <div class="col-xs-6">
      <%= f.input :start_place, placeholder:"Lieu de départ", label: "De :" %>
    </div>
    <div class="col-xs-6">
      <%= f.input :end_place, placeholder:"Lieu d'arrivée", label: "A :" %>
    </div>
  </div>
  <%= f.input :two_way_trip, :as => :boolean, label_html: { for: nil }, input_html: {checked: false, class: "checkbox"}, label: "Aller / Retour" %>
  <%= f.button :submit, "Enregistrer", class: "btn btn-enregistrer" %>
<% end %>


